@model IEnumerable<GuitarShop.Models.ThuongHieuDan>
<div class="list-group">
    <style>
        a.ex1:hover, a.ex1:active {
            color: red;
        }
    </style>
    @foreach (var item in Model)
    {
        <a class="ex1" style="font-size:20px;" href="@Url.Action("SP_TheoThuongHieu","GuitarShop",new { id = item.MaThuongHieu })" @*class="list-group-item"*@>
            @item.TenThuongHieu
        </a>
    }
</div>
